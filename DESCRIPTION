Package: blackbird
Type: Package
Title: Flood Mapping Utilities and Hydraulic Calculations
Version: 1.0.0
Authors@R: c(
    person("Robert", "Chlumsky", email = "robert.chlumsky@heronhydrologic.ca", role = c("cre","aut"), comment = c(ORCID = "0000-0002-1303-5064")),
